generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") //运行时走池化 6543 Transaction Pooler
  directUrl = env("DIRECT_URL") // 迁移时走直连 5432 Session Pooler
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // 存储加密后的密码
  createdAt DateTime @default(now())
}
